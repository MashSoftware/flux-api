          "organisation": {
            "$ref": "#/components/schemas/Organisation"
          },
          "employment": {
            "type": "string",
            "enum": ["permanent", "contract"]
          },
          "full_time_equivalent": {
            "type": "number",
            "format": "float",
            "minimum": 0,
            "maximum": 1,
            "example": 0.8
          },
          "location": {
            "type": "string",
            "example": "Plymouth"
          },
          "teams": {
            "type": "array",
            "minItems": 1,
            "items": {
              "$ref": "#/components/schemas/Team"
            }
          },
          "created_at": {
            "type": "string",
            "format": "date-time",
            "example": "2021-04-20T22:04:51.583801+01:00"
